{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <!-- Hero -->
    <section id="hero" class="container-fluid">
        <div class="overlay"></div>

        {{ form_start(registrationForm, {
            'attr': {
                'class': 'container register__form',
            }}
        ) }}

            <h1 class="h3 mb-3 font-weight-normal text-center">Register</h1>

            {{ form_row(registrationForm.username, {
                'row_attr': {'class': 'form-floating'}
            }) }}
            {{ form_row(registrationForm.email, {
                'row_attr': {'class': 'form-floating mt-2'}
            }) }}
            {{ form_row(registrationForm.plainPassword, {
                'row_attr': {'class': 'form-floating mt-2'},
                'label': 'Password',
                'attr': {'autocomplete': 'new-password'},
            }) }}

            <div class="col-lg-12 text-center mt-4">
                <button class="btn btn-form" type="submit">
                    Create an account
                </button>
            </div>

            <a class="d-flex justify-content-center text-decoration-none register__login mt-4 d-md-none" href="{{ path('app_login') }}">Already an account ?</a>

        {{ form_end(registrationForm) }}
    </section>
{% endblock %}
