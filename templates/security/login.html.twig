{% extends 'base.html.twig' %}

{% block title %}Sign in{% endblock %}

{% block body %}

        <!-- Hero -->
        <section id="hero" class="container-fluid">
            <div class="overlay"></div>

            <form method="post" class="container login__form">

                <h1 class="h3 mb-3 font-weight-normal text-center">Sign in</h1>

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="form-floating">
                    <input type="text" name="username" class="form-control" value="{{ last_username }}" required>
                    <label>Username</label>
                </div>

                <div class="form-floating mt-2">
                    <input type="password" name="password" class="form-control" required>
                    <label>Password</label>
                </div>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                <a class="d-flex justify-content-center text-decoration-none login__forgot-password my-4" href="">Forgot password ?</a>

                <div class="col-lg-12 text-center">
                    <button class="btn btn-form" type="submit">
                        Sign in
                    </button>
                </div>
            </form>
        </section>

{% endblock %}
