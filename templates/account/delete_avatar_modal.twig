{% extends  'modal/_modal.html.twig' %}

{% block id %}user__avatar__modal__delete{% endblock %}

{% block action %}{{ path('app_avatar_remove', { id: app.user.avatar.id }) }}{% endblock %}

{% block header %}{{ app.user.username }}{% endblock %}

{% block message %}Do you really want to remove your avatar ?{% endblock %}

{% block content %}<img class="img-thumbnail mt-3" src="{{ app.user|avatar|imagine_filter('squared_thumbnail_small') }}" alt="{{ app.user.username }} Avatar">{% endblock %}

{% block csrf %}{{ csrf_token('delete'~app.user.avatar.id) }}{% endblock %}

{% block btn_submit_class %}btn-danger{% endblock %}

{% block btn_submit_text %}yes{% endblock %}

{% block btn_dismiss_text %}no{% endblock %}
