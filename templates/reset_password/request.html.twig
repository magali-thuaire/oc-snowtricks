{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <!-- Hero -->
    <section id="hero" class="container-fluid">
        <div class="overlay"></div>

        {{ form_start(requestForm, {
            'attr': {
                'class': 'container login__form',

        }}) }}
            <h1 class="h3 mb-3 font-weight-normal text-center">Reset your password</h1>

            {% for flash_error in app.flashes('reset_password_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}
            {{ form_row(requestForm.username, {
                'row_attr': {'class': 'form-floating mt-4'}
            }) }}
            <div class="mt-2 text-muted px-2">
                <small>
                    Enter your username and we will send you an email with a
                    link to reset your password.
                </small>
            </div>

            <div class="col-lg-12 text-center mt-4">
                <button class="btn btn-form" type="submit">
                    Send email
                </button>
            </div>
        {{ form_end(requestForm) }}

    </section>

{% endblock %}
