{% extends  'modal/_modal.html.twig' %}

{% block id %}trick__modal__delete{% endblock %}

{% block action %}{{ path('app_trick_remove', { id: trick.id }) }}{% endblock %}

{% block header %}{{ trick.author.username }} - {{ trick.createdAt | date('d/m/Y') }} : {{ trick.title }}{% endblock %}

{% block message %}Do you really want to remove this trick ?{% endblock %}

{% block content %}<img class="img-thumbnail mt-3" src="{{ uploaded_asset(trick.featuredImagePath) }}" alt="{{ trick.title~trick.id }}">{% endblock %}

{% block csrf %}{{ csrf_token('delete'~trick.id) }}{% endblock %}

{% block btn_submit_class %}btn-danger{% endblock %}

{% block btn_submit_text %}yes{% endblock %}

{% block btn_dismiss_text %}no{% endblock %}
